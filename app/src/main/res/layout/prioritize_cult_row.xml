<?xml version="1.0" encoding="utf-8"?>
<com.botno.millenariacultselection.widgets.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@id/drag_handle"
        android:background="@drawable/drag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/name"
        android:layout_width="192dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:text="@+id/TextView01"
        android:textSize="14dp"></TextView>

    <CheckedTextView
        android:id="@+id/drag_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="false"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="11dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</com.botno.millenariacultselection.widgets.CheckableLinearLayout>